{
  "compilerOptions": {
    "allowJs": true,
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es6",
    // "types": ["node"],
    "jsx": "react",
    "typeRoots": ["./types"],
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "experimentalDecorators": true
  },
  "ts-Node": {
    "files": true,
    "esm": true
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules", "models"]
}
